!!! 5
%html.game
  %head
    %meta(charset='UTF-8')
    %meta(content='width=device-width, initial-scale=1' name='viewport')
    %title Brainstorm - Game
    %link(href="https://fonts.googleapis.com/css?family=Fredoka+One%7COpen+Sans" rel="stylesheet")
    %link(rel="icon" type='image/png' href="images/storm_logo.png")
    %link(rel='stylesheet' href='libdev/styles/main.min.css')
  %body.game
    %audio.music(style="display: none" loop)
      %source.song(style="display:none" src="embedded music/01 Heartbeats [DVD].mp3" type="audio/mpeg")
    %header
      %img.storm(src='images/storm_logo.png' alt='grey storm logo')
      %img.lightning(src='images/storm_logo_white.png' alt='white storm logo')
      %h1.logo(data-shadow='brainstorm') brainsto.rm
      %nav.menu
        %ul.navbar
          %li.play
            %a.play(href='#') Play
          %li.leaderboard
            %a.leaderboard(href='#') Leaderboard
          %li.account
            %a.account(href='#') Account
          %li.logout
            %a.logout(href='#') Logout
      %nav.menu-small
        %h3.nav
          %a.menu Menu
        %div.drop-nav
          %ul
            %li.play
              %a.play(href='#') Play
            %li.leaderboard
              %a.leaderboard(href='#') Leaderboard
            %li.account
              %a.account(href='#') Account
            %li.logout
              %a.logout(href='#') Logout
    %input.mute-button(type="button" value="Mute")
    %input.start-game(type="button" value="Start Game")
    .game-container
      .scores-container
        %ul
          %li.solution-score +100
          %li.current-score SCORE: <br> 0
          %li.personal-best PERSONAL BEST: <br> 0
          %li.high-score HIGH SCORE: <br> 0
      %img.cloudOne(src='images/clouds_3.png' alt='cloud image')
      %img.cloudTwo(src='images/clouds_4.png' alt='cloud image')
      %img.cloudThree(src='images/clouds_5.png' alt='cloud image')
      %img.cloudFour(src='images/clouds_6.png' alt='cloud image')
      %img.cloudFive(src='images/clouds_5.png' alt='cloud image')
      %img.cloudSix(src='images/clouds_4.png' alt='cloud image')
      %form.solution
        %input.solution-field(id="solution-field" type="text" placeholder="=" autocomplete='off')
      %form.score-submission
        %input.score-to-send(type="text" readonly="readonly")
        %input.user-id(type="text" readonly="readonly")
      .grass-container
        %img.grass(src='images/grass.png')

    %script(src="libdev/js/vendor.min.js")
    %script(src="libdev/js/game.js")
