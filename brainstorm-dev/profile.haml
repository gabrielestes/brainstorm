!!! 5
%html.profile(lang='en')
  %head
    %meta(charset='UTF-8')
    %meta(content='width=device-width, initial-scale=1' name='viewport')
    %title brainsto.rm
    %link( href="https://fonts.googleapis.com/css?family=Fredoka+One|Open+Sans" rel="stylesheet")
    %link(rel="icon" type='image/png' href="images/storm_logo.png")
    %link(rel="stylesheet" href="libdev/styles/main.min.css")
%body.profile
  - user = {user_name: 'Lindsey Adams', high_score: '12,000', email:'linzma87@gmail.com', twitter:'@turmerictotebag', instagram:'@lindsmadams'}
  - topPlayer = {user_name: 'Somebody Else', high_score: '20,000'}
  %header.profile
    %img.storm(src='images/storm_logo.png' alt='grey storm logo')
    %img.lightning(src='images/storm_logo_white.png' alt='white storm logo')
    %h1.logo(data-shadow='brainstorm') brainsto.rm
  %section.profile-container
    %div.initials
      %h3 LA
    %ul.user-info
      %li.name(data-id='user-name') #{user[:user_name]}
      %li.score(data-id='high-score')
        high score:
        %span #{user[:high_score]}
      %hr
      %li(data-id='twitter')
        %img(src='images/twitter_icon.png' alt='twitter icon')
        %p #{user[:twitter]}
      %li.instagram(data-id='instagram')
        %img(src='images/instagram_icon.png' alt='instagram icon')
        %p #{user[:instagram]}
      %li(data-id='email')
        %img(src='images/email_icon.png' alt='email icon')
        %p #{user[:email]}
      %div.edit
        %img.edit(src='images/edit_icon.png' alt='edit icon')
    %ul.edit-info
      %li.name(data-id='user-name') #{user[:user_name]}
      %li.score(data-id='high-score')
        high score:
        %span #{user[:high_score]}
      %hr
      %form
        %li(data-id='twitter')
          %img(src='images/twitter_icon.png' alt='twitter icon')
          %input #{user[:twitter]}
        %li.instagram(data-id='instagram')
          %img(src='images/instagram_icon.png' alt='instagram icon')
          %input #{user[:instagram]}
        %li(data-id='email')
          %img(src='images/email_icon.png' alt='email icon')
          %input #{user[:email]}
      %div.submit
        -# %img.edit(src='images/edit_icon.png' alt='edit icon')

  %script(src='libdev/js/vendor.min.js')
  %script(src='libdev/js/profile.js')
